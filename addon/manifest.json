{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "author": "Mikael",
  "default_locale": "fr",
  "browser_specific_settings": {
    "gecko": {
      "id": "filter-move-mail@mmaunier.github.io",
      "strict_min_version": "128.0",
      "update_url": "https://raw.githubusercontent.com/mmaunier/thunderbird-filter-move-mail/main/updates.json"
    }
  },
  "permissions": [
    "accountsRead",
    "addressBooks",
    "messagesRead",
    "messagesMove",
    "messagesDelete",
    "storage"
  ],
  "background": {
    "page": "background/background.html"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "__MSG_browserActionTitle__",
    "default_icon": {
      "16": "icons/filter-16.svg",
      "32": "icons/filter-32.svg",
      "48": "icons/filter-48.svg"
    }
  },
  "icons": {
    "16": "icons/filter-16.svg",
    "32": "icons/filter-32.svg",
    "48": "icons/filter-48.svg",
    "128": "icons/filter-128.svg"
  }
}
